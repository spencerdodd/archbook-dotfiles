[bar/top]
monitor = eDP-1
width = 100%
height = 34

background = #00000000
foreground = #ccffffff

line-color = ${bar/bottom.background}
line-size = 16

spacing = 2
padding-right = 5
module-margin = 1

font-0 = tty-hack:size=20;0

modules-right = volume wireless-network wired-network wanip battery date
modules-left = temperature vpncheck

[bar/bottom]
monitor = eDP-1
bottom = true
width = 100%
height = 27

background = ${bar/top.background}
foreground = ${bar/top.foreground}

line-color = ${bar/top.background}
line-size = 2

spacing = 3
padding-right = 4
module-margin-left = 0
module-margin-right = 6

font-0 = tty-hack:size=20;0

[module/date]
type = internal/date
date = %%{F#99}%Y-%m-%d%%{F-}  %%{F#fff}%H:%M%%{F-}
date-alt = %%{F#fff}%A, %d %B %Y  %%{F#fff}%H:%M%%{F#666}:%%{F#fba922}%S%%{F-}

[module/battery]
type = internal/battery
full-at=96

format-charging = battery: <label-charging>
format-discharging = battery: <label-discharging>
format-full = battery: <label-full>

[module/wired-network]
type = internal/network
interface = eth0
interval = 3.0

label-connected =    wired: %{T3}%local_ip%%{T-}
label-disconnected-foreground = #66

[module/wireless-network]
type = internal/network
interface = wlp2s0
interval = 3.0
ping-interval = 10

label-connected = wifi: %essid%
label-disconnected =    wifi: not connected
label-disconnected-foreground = #66

[module/volume]
type = internal/volume
speaker-mixer = Speaker
headphone-mixer = Headphone
headphone-id = 9

format-volume = volume: <label-volume>
label-muted =   volume muted
label-muted-foreground = #66

[module/temperature]
type = internal/temperature

; Seconds to sleep between updates
; Default: 1
interval = 0.5

; Thermal zone to use
; To list all the zone types, run 
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 1

; Threshold temperature to display warning label
; Default: 80
warn-temperature = 80

[module/vpncheck]
type = custom/script
exec = pgrep openvpn
interval = 5
format-prefix = " "
format-prefix-foreground = #5b

[module/wanip]
type = custom/script
exec = ~/.config/polybar/wanip.sh
interval = 5

; vim:ft=dosini

